            <div class="container-fluid">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">产品列表</h3>
                        <div class="card-body table-responsive p-0">
                            <table class="table table-striped table-valign-middle">

                                <thead>
                                <tr>
                                    <th>用户套餐名</th>
                                    <th>用户名</th>
                                    <th>套餐申请日期</th>
                                    <th>套餐费用</th>
                                    <th>套餐状态</th>
                                </tr>
                                </thead>

                                <#list businessList as business>
                                    <tbody>
                                    <tr>
                                        <td>
                                            <img src="/dist/img/default-150x150.png" alt="Product 1"
                                                 class="img-circle img-size-32 mr-2">
                                            ${serviceService.findService
                                            (userProductService.getUserProduct(business.getUpid()).getSid()).getFullname()}
                                        </td>
                                        <td>${userSerivce.findUser(business.getUid()).getFullname()}</td>
                                        <td>
                                            ${userProductService.getUserProduct(business.getUpid()).getS_time()}
                                        </td>
                                        <td>
                                            ${serviceService.findService
                                            (userProductService.getUserProduct(business.getUpid()).getSid()).getPrice()
                                            }
                                        </td>
                                        <td>
                                            <#if business.getState()==0>
                                                待审核
                                            </#if>
                                            <#if business.getState()==1>
                                                已审核
                                            </#if>
                                        </td>
                                        <td>
                                            <#if business.getState()==0>
                                                <a href="/customService/order/${business.getId()}">
                                                    <i class="fas fa-search"></i>
                                                </a>
                                            </#if>
                                        </td>
                                    </tr>
                                    </tbody>
                                </#list>

                            </table>
                        </div>
                    </div>
                </div>
